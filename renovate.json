{
  "extends": [
    "config:base",
    "docker:disableMajor"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "kind/security"
    ]
  },
  "stabilityDays": 1,
  "semanticCommits": "disabled",
  "ignorePaths": [],
  "ignoreDeps": [],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 3am on tuesday"
    ]
  },
  "node": {
    "supportPolicy": [
      "lts_latest"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "extends": [
        "schedule:weekends"
      ]
    },
    {
      "matchPackagePatterns": [
        "^@types/"
      ],
      "groupName": "type definitions"
    },
    {
      "matchPackageNames": [
        "stylelint",
        "stylelint-config-standard"
      ],
      "groupName": "stylelint monorepo"
    }
  ]
}
